{
  "name": "valdie",
  "version": "0.1.0",
  "description": "Modern javaScript and typescript  Validator that just works",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "tsc",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rwanda-Coding-Academy/Valdie.git"
  },
  "keywords": [
    "validator",
    "ts-validator",
    "validation",
    "js-validator"
  ],
  "author": "Makuza Mugabo Verite & Patrick Niyogitare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rwanda-Coding-Academy/Valdie/issues"
  },
  "homepage": "https://github.com/Rwanda-Coding-Academy/Valdie#readme",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "node-notifier": ">=8.0.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "4.4.3"
  },
  "dependencies": {},
  "prettier": {
    "semi": false,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
