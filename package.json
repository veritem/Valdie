{
  "name": "valdie",
  "version": "0.1.1",
  "description": "Modern javaScript and typescript  Validator that just works",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "tsc",
    "prepare": "husky install"
  },
  "files": ["dist"],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rwanda-Coding-Academy/Valdie.git"
  },
  "keywords": ["validator", "ts-validator", "validation", "js-validator"],
  "author": "Makuza Mugabo Verite & Patrick Niyogitare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rwanda-Coding-Academy/Valdie/issues"
  },
  "homepage": "https://github.com/Rwanda-Coding-Academy/Valdie#readme",
  "devDependencies": {
    "@types/jest": "27.0.3",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.7.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "26.6.3",
    "node-notifier": "10.0.0",
    "prettier": "2.5.1",
    "ts-jest": "26.5.6",
    "typescript": "4.5.4"
  },
  "dependencies": {},
  "prettier": {
    "semi": false,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
